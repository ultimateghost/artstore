<div class="wrapper wrapper-content animated fadeInRight ecommerce">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>

                        <th>Order ID</th>
                        <th data-hide="phone">Customer</th>
                        <th data-hide="phone">Amount</th>
                        <th data-hide="phone">Date added</th>
                        <th data-hide="phone,tablet" >Date modified</th>
                        <th data-hide="phone">Status</th>
                        <th class="text-right">Action</th>

                    </tr>
                    </thead>
                    <tbody>
                      <% @orders.each do |order| %>
                    <tr>
                        <td>
                            <%= order.id %>
                        </td>
                        <td>
                            <%= order.user.email %>
                        </td>
                        <td>
                            <%= order.total %>
                        </td>
                        <td>
                            <%= order.created_at.to_s(:long) %>
                        </td>
                        <td>
                            <%= order.updated_at.to_s(:long) %>
                        </td>
                        <td>
                            <%= render_order_state(order) %>
                        </td>
                        <td class="text-right">
                            <div class="btn-group">
                                <button class="btn-white btn btn-xs">
                                  <%= link_to("View", admin_order_path(order) ) %></button>
                                <button class="btn-white btn btn-xs">
                                  <%= link_to("Cancel", cancel_admin_order_path(order) ) %></button>
                            </div>
                        </td>
                    </tr>
                      <% end %>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="7">
                            <ul class="pagination pull-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>


</div>
<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.footable').footable();

});

</script>

<% end %>
