<div class="wrapper wrapper-content animated fadeInRight">

<div class="row">
    <div class="col-lg-12">

        <div class="ibox product-detail">
            <div class="ibox-content">

                <div class="row">
                    <div class="col-md-6">
                        <div class="product-images">
                            <% if @product.photo.present? %>
                                <%= image_tag(@product.photo.image.medium.url, class: "thumbnail") %>
                            <% else %>
                                <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
                            <% end %>
                        </div>
                    </div>

                    <div class="col-md-6">

                        <h2 class="font-bold m-b-xs">
                            <%= @product.title %>
                        </h2>

                        <div class="m-t-md">
                            <h2 class="product-main-price">$ <%= @product.price %> <small class="text-muted">Exclude Tax</small> </h2>
                        </div>
                        <hr>

                        <h4>Product description</h4>
                        <div class="small text-muted">
                            <%= @product.description %>
                        </div>

                        <h4>Quantity</h4>
                        <div class="small text-muted">
                            <%= @product.quantity %>
                        </div>

                        <hr>

                        <div>
                            <% if @product.quantity > 0 %>
                                <%= link_to add_to_cart_product_path(@product), method: :post, class: "btn btn-primary btn-sm" do %>
                                    <i class="fa fa-cart-plus">加入購物車</i>
                                <% end %>
                            <% else %>
                                已銷售一空，無法購買
                            <% end %>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(window).load(function() {

    $('.product-images').slick({
        dots: true
    });

});

</script>

<% end %>

